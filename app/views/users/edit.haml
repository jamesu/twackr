- @page_title = t('title.settings')
= form_for @user do |f|
  = error_messages_for :user
  = haml :'users/_fields', :locals => {:f => f}
  = f.submit t('users.update')
  %span="or"
  = link_to t('users.delete'), :url => user_path(@user), :method => :delete, :confirm => t('users.delete_confirm'), :remote => true
